    <!-- Script to handle success message and refresh the page -->
    <script>
        // Function to check for query parameters and display messages
        function showMessageAndRefresh() {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');

            if (message) {
                const alertMessageDiv = document.getElementById('alert-message');
                alertMessageDiv.textContent = decodeURIComponent(message);
                alertMessageDiv.className = 'alert alert-warning'; // For error messages

                if (message.includes('successfully')) {
                    alertMessageDiv.className = 'alert alert-success'; // Success case
                    setTimeout(() => {
                        window.location.href = '/account'; // Refresh without query params
                    }, 3000);
                } else {
                    alertMessageDiv.style.display = 'block'; // Show the message for errors
                }
            }

            if (message) {
                const successMessageDiv = document.getElementById('success-message');
                successMessageDiv.textContent = decodeURIComponent(message);
                successMessageDiv.style.display = 'block';

                // Automatically refresh the page after 3 seconds
                setTimeout(() => {
                    window.location.href = '/account'; // Refresh without query params
                }, 3000);
            }
        }

        // Call the function on page load
        window.onload = showMessageAndRefresh;
    </script>
